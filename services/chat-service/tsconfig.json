{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "rootDir": "./",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "noEmitOnError": false,
      "sourceMap": true,
      "types": ["node"],
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": [
      "./**/*.ts",
      "./types/**/*.d.ts",
      "./src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  