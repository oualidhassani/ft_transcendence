datasource db {
  provider = "sqlite"
  url      = env("GAME_DATABASE_URL")
}

model GameRoom {
  id           Int        @id @default(autoincrement())
  gameId       String     @unique
  p1           String?
  p2           String?
  status       String
  mode         String
  difficulty   String?
  winner       String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}
